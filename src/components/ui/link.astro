---
interface Props {
  href: string;
  size?: "md" | "lg";
  block?: boolean;
  style?: "outline" | "primary" | "inverted" | "muted";
  class?: string;
  [x: string]: any;
}

const {
  href,
  block,
  size = "lg",
  style = "primary",
  class: className,
  ...rest
} = Astro.props;

const sizes = {
  lg: "px-5 py-2.5",
  md: "px-4 py-2",
};

const styles = {
  outline: "bg-transparent border-2 border-brand-gold hover:bg-brand-gold/10 text-brand-gold hover:scale-105 hover:shadow-lg hover:shadow-brand-gold/20",
  primary: "bg-brand-gold text-black hover:bg-brand-gold-light border-2 border-transparent font-semibold hover:scale-105 hover:shadow-lg hover:shadow-brand-gold/30 active:scale-95",
  inverted: "bg-white text-black border-2 border-transparent hover:scale-105 active:scale-95",
  muted: "bg-gray-100 hover:bg-gray-200 border-2 border-transparent hover:scale-105 active:scale-95",
};
---

<a
  href={href}
  {...rest}
  class:list={[
    "rounded-sm text-center transition-all duration-200 ease-out focus-visible:ring-2 ring-offset-2 ring-gray-200 transform",
    block && "w-full",
    sizes[size],
    styles[style],
    className,
  ]}
  ><slot />
</a>
