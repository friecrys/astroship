---
import Link from "./ui/link.astro";
import { Icon } from "astro-icon/components";
---

<div
  class="bg-brand-surface p-8 md:px-20 md:py-20 mt-20 mx-auto max-w-5xl rounded-lg flex flex-col items-center text-center border border-brand-gold/20">
  <span class="inline-block px-3 py-1 text-sm font-semibold bg-brand-gold/10 text-brand-gold rounded-full border border-brand-gold/30 mb-6">
    24/7 Support
  </span>
  <h2 class="text-white text-4xl md:text-5xl tracking-tight font-bold">
    Safety & Support
  </h2>
  <p class="text-slate-400 mt-4 text-lg md:text-xl max-w-2xl">
    Have questions or need assistance? Our support team is active 24/7 to help you with your orders.
  </p>
  <div class="flex flex-col sm:flex-row gap-4 mt-8">
    <Link 
      href="https://t.me/foodaio1" 
      target="_blank"
      class="flex gap-2 items-center justify-center"
      rel="noopener">
      <Icon class="w-5 h-5" name="bx:bxl-telegram" />
      Message @foodaio1
    </Link>
    <Link 
      href="https://t.me/foodaiolounge" 
      style="outline"
      target="_blank"
      class="flex gap-2 items-center justify-center"
      rel="noopener">
      <Icon class="w-5 h-5" name="bx:bxs-chat" />
      Join @foodaiolounge
    </Link>
  </div>
</div>
